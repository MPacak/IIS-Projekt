<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

    <BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
                fx:controller="hr.iisclient.controller.MainViewController"  prefHeight="600.0" prefWidth="800.0">
        <center>
            <TabPane fx:id="mainTabPane">
                <tabs>
                    <Tab text="Validation">
                        <content>
                            <TabPane fx:id="validationTabPane">
                                <tabs>
                                    <Tab text="XSD">
                                        <content>
                                            <!-- XSD validation UI -->
                                            <AnchorPane fx:id="xsdPane" />
                                        </content>
                                    </Tab>
                                    <Tab text="RNG">
                                        <content>
                                            <!-- RNG validation UI -->
                                            <AnchorPane fx:id="rngPane" />
                                        </content>
                                    </Tab>
                                </tabs>
                            </TabPane>
                        </content>
                    </Tab>

                    <Tab text="SOAP Client">
                        <content>
                            <!-- SOAP endpoint UI -->
                            <AnchorPane fx:id="soapPane" />
                        </content>
                    </Tab>

                    <Tab text="Articles" onSelectionChanged="#onArticlesTabSelectionChanged">
                        <content>
                            <!-- REST client UI will be loaded here after login -->
                            <AnchorPane fx:id="articlesPane" />
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
        </center>
    </BorderPane>

